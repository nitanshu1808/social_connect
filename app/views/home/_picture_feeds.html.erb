<div class="container text-center">
  <div class="feed-heading">
    <%= I18n.t("app.picture_feeds") %>
  </div>

  <% @user_media && @user_media.in_groups_of(3).each do |group| %>
    <div class="row row-spacing">
      <% group.compact.each do |media| %>
        <div class="col-md-4">
          <div class="img-box">
            <div>
                <span class="image-user">
                  <%= @user_info["username"] %>
                </span>
                <span class="img-location"><%= image_location(media) %></span>
            </div>
            <div>
              <%= image_tag( image_url(media), alt: image_caption(media), class: 'display-pic') %>
            </div>
            <div class="caption-txt">
              <span>
                <%= image_caption(media)%>                
              </span>
            </div>
            <div>
              <span class="like-count-msg">
                <%= pluralize_word(I18n.t('app.comment'), comment_count(media)) %> :
                <span class="like-comment-count"> <%= comment_count(media) %> </span>
              </span>

              <span class="like-count-msg">
                <%= pluralize_word(I18n.t('app.like'), like_count(media)) %> :
                <span class="like-comment-count"><%= like_count(media) %></span>
              </span>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% end %>
</div>

<!-- The Modal -->
<div id="myModal" class="modal">
  <span class="close">&times;</span>
  <img class="modal-content" id="img01">
  <div id="caption"></div>
</div>

<script>
// Get the modal
var modal = document.getElementById('myModal');

// Get the image and insert it inside the modal - use its "alt" text as a caption
var img = document.getElementsByClassName('display-pic');
var modalImg = document.getElementById("img01");
var captionText = document.getElementById("caption");
img.onclick = function(){
    modal.style.display = "block";
    modalImg.src = this.src;
    captionText.innerHTML = this.alt;
}

// Get the <span> element that closes the modal
var span = document.getElementsByClassName("close")[0];

// When the user clicks on <span> (x), close the modal
span.onclick = function() { 
    modal.style.display = "none";
}
</script>